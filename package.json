{
    "name": "gladdis",
    "version": "0.4.0",
    "description": "Gladdis (Generative Language Artificial Dedicated & Diligent Intelligence System) -- it's an AI chatbot.",
    "keywords": [
        "gladdis",
        "generative",
        "language",
        "artificial",
        "intelligence",
        "system",
        "openai",
        "chatbot",
        "obsidian"
    ],
    "homepage": "https://github.com/AurelienStebe/Gladdis",
    "repository": "github:AurelienStebe/Gladdis",
    "bugs": "https://github.com/AurelienStebe/Gladdis/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "license": "MIT",
    "type": "module",
    "files": [
        "/lib/",
        "/CHANGELOG.md"
    ],
    "scripts": {
        "clean": "rimraf coverage lib",
        "lint": "prettier -c . && eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
        "build": "npm run clean && tsc",
        "test": "vitest --ui --coverage",
        "start": "node --no-warnings ./lib/service.js",
        "live": "nodemon --exec node --no-warnings --loader ts-node/esm ./src/service.ts"
    },
    "engines": {
        "npm": ">=6.14",
        "node": ">=16.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "parserOptions": {
            "project": true
        },
        "extends": [
            "eslint:recommended",
            "standard-with-typescript",
            "prettier"
        ],
        "reportUnusedDisableDirectives": true
    },
    "release": {
        "tagFormat": "Gladdis-v${version}",
        "branches": [
            "main",
            "next"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json"
                    ],
                    "message": "chore: Gladdis release version ${nextRelease.version} :tada: "
                }
            ],
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@dqbd/tiktoken": "^1.0.7",
        "deepmerge": "^4.3.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "fs-extra": "^11.1.1",
        "openai": "^4.2.0",
        "yaml": "^2.3.1"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^10.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^9.0.4",
        "@semantic-release/npm": "^10.0.5",
        "@semantic-release/release-notes-generator": "^11.0.4",
        "@types/express": "^4.17.17",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^20.5.4",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@vitest/coverage-v8": "^0.34.2",
        "@vitest/ui": "^0.34.2",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^38.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.0.2",
        "eslint-plugin-promise": "^6.1.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "semantic-release": "^21.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.2"
    }
}
