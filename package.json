{
    "name": "gladdis",
    "version": "0.3.1",
    "description": "Gladdis (Generative Language Artificial Dedicated & Diligent Intelligence System)",
    "keywords": [
        "gladdis"
    ],
    "repository": "github:AurelienStebe/Gladdis",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "license": "MIT",
    "type": "module",
    "main": "./dist/service.js",
    "exports": "./dist/service.js",
    "scripts": {
        "lint": "prettier -c . && eslint .",
        "clean": "rimraf dist",
        "build": "npm run clean && tsc",
        "start": "node --no-warnings ./dist/service.js",
        "live": "nodemon --exec ts-node-esm ./src/service.ts"
    },
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "parserOptions": {
            "project": true
        },
        "extends": [
            "eslint:recommended",
            "standard-with-typescript",
            "prettier"
        ],
        "reportUnusedDisableDirectives": true
    },
    "dependencies": {
        "@dqbd/tiktoken": "^1.0.6",
        "@fern-api/openai": "^0.0.24",
        "deepmerge": "^4.3.1",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "openai": "^3.2.1",
        "yaml": "^2.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "rimraf": "^5.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
