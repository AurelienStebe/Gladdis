{
    "name": "gladdis",
    "version": "0.3.0",
    "description": "Gladdis (Generative Language Artificial Dedicated Developer Intelligence System)",
    "keywords": [
        "gladdis"
    ],
    "repository": "github:AurelienStebe/Gladdis",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "exports": "./dist/index.js",
    "scripts": {
        "live": "ts-node-esm ./src/index.ts",
        "clean": "rimraf dist",
        "build": "npm run clean && tsc",
        "lint": "prettier -c . && eslint ."
    },
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "parserOptions": {
            "project": true
        },
        "extends": [
            "eslint:recommended",
            "standard-with-typescript",
            "prettier"
        ],
        "reportUnusedDisableDirectives": true
    },
    "dependencies": {
        "deepmerge": "^4.3.1",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "huggingface": "^1.4.0",
        "langchain": "^0.0.36",
        "openai": "^3.2.1",
        "yaml": "^2.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "^2.8.4",
        "rimraf": "^4.4.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.2"
    }
}
