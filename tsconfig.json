{
    "exclude": ["tests"],
    "compilerOptions": {
        "strict": true,
        "outDir": "lib",
        "rootDir": "src",
        "module": "esnext",
        "target": "es2020",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    }
}
